<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">

        <Button
            android:id="@+id/classBtn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/classBtn2"
            android:textColor="@color/white"
            android:background="@drawable/buttonshape"
            android:shadowRadius="5"
            android:layout_margin="16dp"
            android:text="@string/class_txt_10122017" />

        <Button
            android:id="@+id/classBtn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/classBtn1"
            android:textColor="@color/white"
            android:background="@drawable/buttonshape"
            android:shadowRadius="5"
            android:layout_margin="16dp"
            android:text="@string/class_txt_09122017" />

        <Button
            android:id="@+id/classBtn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@drawable/buttonshape"
            android:shadowRadius="5"
            android:layout_margin="16dp"
            android:text="@string/class_txt_12112017" />


        <Button
            android:id="@+id/classBtn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/classBtn3"
            android:textColor="@color/white"
            android:background="@drawable/buttonshape"
            android:shadowRadius="5"
            android:layout_margin="16dp"
            android:text="@string/class_txt_unknown1" />

        <Button
            android:id="@+id/classBtn5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/classBtn4"
            android:textColor="@color/white"
            android:background="@drawable/buttonshape"
            android:shadowRadius="5"
            android:layout_margin="16dp"
            android:text="@string/class_txt_unknown2" />


    </TableLayout>
</ScrollView >